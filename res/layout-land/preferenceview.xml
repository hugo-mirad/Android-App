 <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#d84a49" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Preferences"
            android:textColor="#FFFFFF"
             android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/preference_gotohome"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/home"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
    </RelativeLayout>
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_above="@+id/v1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/relativeLayout1"
        android:background="#F3F3F3" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/Preferences1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="22dp"
                android:background="#d84a49"
                android:textColor="#ffffff"
                android:text="@string/preferenceOne" />

            <Button
                android:id="@+id/Preferences2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="#d84a49"
                android:textColor="#ffffff"
                android:text="@string/preferencetwo" />

            <Button
                android:id="@+id/Preferences3"
                android:layout_width="match_parent"
                 android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="#d84a49"
                android:textColor="#ffffff"
                android:text="@string/preferencethree" />

            <Button
                android:id="@+id/Preferences4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="#d84a49"
                android:textColor="#ffffff"
                android:text="@string/preferencefour" />

            <Button
                android:id="@+id/Preferences5"
                android:layout_width="match_parent"
                 android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="#d84a49"
                android:textColor="#ffffff"
                android:text="@string/preferencefive" />
        </LinearLayout>
    </ScrollView>

