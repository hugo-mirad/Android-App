<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d84a49"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_home_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_home_findacar"
        android:layout_alignTop="@+id/btn_home_findacar"
        android:layout_marginTop="42dp"
        android:background="@drawable/buycar_small" />

    <Button
        android:id="@+id/btn_home_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="45dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/info" />

   

    <Button
        android:id="@+id/btn_home_findacar"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn"
        android:text="Find A Car"
        android:textColor="#FFFFFF" />

</RelativeLayout>