<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#EDEDED" >

    <TextView
        android:id="@+id/tv_unitedcar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="80dp"
        android:text="www.mobicarz.com"
        android:textColor="#d84a49"
        android:textSize="18px"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_portal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_unitedcar"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:text="Number one portal for car buyers and sellers"
        android:textColor="#333333"
        android:textSize="15sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tv_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_portal"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:text="Contact: "
        android:textColor="#333333"
        android:textSize="18px" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_contact"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:text="Email:"
        android:textColor="#333333"
        android:textSize="18px" />

    <TextView
        android:id="@+id/tv_contactphno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_contact"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv_contact"
        android:text="888-786-8307"
        android:textColor="#d84a49"
        android:textSize="18px" />

    <TextView
        android:id="@+id/tv_emailaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_email"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv_email"
        android:text="info@mobicarz.com"
        android:textColor="#d84a49"
        android:textSize="18px" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#d84a49" >

        <TextView
            android:id="@+id/tv_about_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/home"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView1_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_about_home"
            android:layout_alignBottom="@+id/tv_about_home"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>