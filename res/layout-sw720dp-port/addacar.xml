<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="180dp"
        android:text="Make*:"
        android:textColor="#333333"
        android:textSize="26sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/sp_addacar_make"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/textView1"
        android:layout_marginLeft="300dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/sp_addacar_make"
        android:layout_marginTop="40dp"
        android:text="Model*:"
        android:textColor="#333333"
        android:textSize="26sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spin2"
        android:layout_width="240dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/sp_addacar_make"
        android:layout_alignTop="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/spin2"
        android:layout_marginTop="40dp"
        android:text="Year*:"
        android:textColor="#333333"
        android:textSize="26sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/sp_year"
        android:layout_width="240dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/spin2"
        android:layout_alignTop="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/sp_year"
        android:layout_marginTop="40dp"
        android:text="Price:"
        android:textColor="#333333"
        android:textSize="26sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_price"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/sp_year"
        android:ems="10"
        android:inputType="number"
        android:textColor="#000000"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/et_price"
        android:layout_marginTop="40dp"
        android:text="Mileage:"
        android:textColor="#333333"
        android:textSize="26sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_mileage"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/et_price"
        android:ems="10"
        android:inputType="number"
        android:textColor="#333333"
        android:textSize="26sp" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="#d84a49" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Add  A New Car"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_addacar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:background="#d84a49"
            android:text="BACK"
            android:textColor="#FFFFFF"
            android:textSize="28sp" />

        <Button
            android:id="@+id/btn_add_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:background="#d84a49"
            android:text="ADD"
            android:textColor="#FFFFFF"
            android:textSize="28sp" />
    </RelativeLayout>

</RelativeLayout>